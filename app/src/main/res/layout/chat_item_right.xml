<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_chat_right"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"
            android:text="this is text message"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_marginStart="100dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/bg_text_chat_right">

        <TextView
            android:id="@+id/image_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="this is text message"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/image_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_male_ph"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_document"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_text_chat_right">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/document_chat"
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/camera_button"/>

                <TextView
                    android:id="@+id/tvDocumentName"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="File Name"/>

                <ImageButton
                    android:id="@+id/btn_download"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_arrow_circle_down_24"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_voice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:visibility="visible"
        android:background="@drawable/bg_layout_round"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="-3dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_play_chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_play_circle_filled_24"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:visibility="visible" />

        </RelativeLayout>
        <View
            android:id="@+id/v_length"
            android:layout_width="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white" />
        <Chronometer
            android:id="@+id/tv_duration"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="01:00"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>