<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectCompanyActivity"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:transitionName="image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/busy"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="You're a busy one!"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="We found you in multiple companies, select which company you'd like to login to."
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="270dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:background="@drawable/bg_layout_round"
                android:backgroundTint="@color/colorDivider"
                android:textColorHint="@color/grey"
                app:tint="@color/grey"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:drawableTint="@color/grey"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:drawablePadding="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"/>
    </LinearLayout>
</layout>